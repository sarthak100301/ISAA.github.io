<h3>
    <a class="btn btn-secondary" href="/student"><i class="fa fa-plus"></i> Create New</a>
    <div class="heading" style="text-align: center;">
        Student List
    </div>
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Registration Number</th>
            <th>Branch</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.regno}}</td>
            <td>{{this.branch}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/student/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/student/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>